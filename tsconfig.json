{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "./node_modules/",
    "./dist/"
  ],
}